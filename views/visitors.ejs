<div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Visitors</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Visitors</a></li>
                <li class="breadcrumb-item active" aria-current="page">Visitors</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <% if(message.success){ %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span class="alert-text"><strong>Success!</strong> <%= message.success %></span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>
            <% if(message.error){ %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <span class="alert-text"><strong>Error!</strong> <%= message.error %></span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>
            <h3 class="mb-0">Light table</h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <% if(visitors != ''){ %>
            <table class="table align-items-center table-flush table-datatable">
              <thead class="thead-light">
                <tr>
                  <th scope="col" class="sort" data-sort="name">Ip</th>
                  <th scope="col" class="sort" data-sort="user_agent">User agent</th>
                  <th scope="col" class="sort" data-sort="url">URL</th>
                  <th scope="col" class="sort" data-sort="last_visit">Last visit</th>
                  <th scope="col" class="sort" data-sort="country">Country</th>
                  <th scope="col" class="sort" data-sort="referrer">Referrer</th>
                  <!-- <th scope="col"></th> -->
                </tr>
              </thead>
              <tbody class="list">
                <% visitors.forEach((row, index) => { %>
                <tr>
                  <th scope="row">
                    <div class="media align-items-center">
                      <div class="media-body">
                        <span class="name mb-0 text-sm"><%= row.ipAddress %></span>
                      </div>
                    </div>
                  </th>
                  <td>
                    <div>
                        <span class="mb-0 text-sm"><%= row.userAgent.substring(0, 50) %></span>
                    </div>
                  </td>
                  <td>
                    <div>
                        <span class="mb-0 text-sm"><%= row.currentUrl %></span>
                    </div>
                  </td>
                  <td>
                    <div>
                        <span class="mb-0 text-sm"><%= row.lastVisit %></span>
                    </div>
                  </td>
                  <td class="tag">
                    <span class="badge badge-pill badge-lg badge-primary"><%= row.country %></span>
                  </td>
                  <td>
                    <div>
                        <span class="mb-0 text-sm"><%= row.referrer %></span>
                    </div>
                  </td>
                  
                  <!-- <td class="text-right">
                    <div class="dropdown">
                      <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        <a class="dropdown-item" href="/edit-visitor/<%= row._id %>">Edit</a>
                        <a type="button" class="dropdown-item text-dark" data-toggle="modal" data-target="#exampleModal">Delete</a>
                      </div>
                    </div>
                  </td> -->
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to delete?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form action="/delete-visitor/<%= row._id %>" method="post">
                          <input class="btn btn-danger" type="submit" value="Delete">
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
              </tbody>
            </table>
            <% } else { %>
                <h1 class="text-center text-primary">No Visitors Found</h1>
            <% } %>
          </div>
          <!-- Card footer -->
          <div class="card-footer py-4">
            <!-- table footer -->
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
  </div>