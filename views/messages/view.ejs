<!-- Page content -->
<div class="container-fluid mt-6">
    <div class="row">
        <div class="col-xl order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">View Message </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form action="#">
                        <h6 class="heading-small text-muted mb-4">Message information</h6>
                        <div class="pl-lg-4">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-name">Name</label>
                                        <input class="form-control" placeholder="name" type="text" id="name" name="name" value="<%= message.name %>" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-name">Email</label>
                                        <input class="form-control" placeholder="email" type="email" id="email" name="email" value="<%= message.email %>" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-email">Message</label>
                                        <textarea class="form-control" name="content" id="content" rows="8" disabled><%= message.message %></textarea>
                                    </div>
                                </div>
                            </div>

                        </div> 
                    </form> 
                </div> 
            </div> 
        </div> 
    </div> 
</div> 
