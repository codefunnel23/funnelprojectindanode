<!-- Page content -->
<div class="container-fluid mt-6">
    <div class="row">
        <div class="col-xl order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">View Post </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form action="#" method="post">
                        <h6 class="heading-small text-muted mb-4">Post information</h6>
                        <div class="pl-lg-4">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="langblog">Language</label>
                                        <select class="form-control" id="exampleFormControlSelect1" name="langblog"
                                            disabled>
                                            <option value="<%= post.langblog %>">
                                                <%= post.langblog %>
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-name">Title</label>
                                        <input class="form-control" placeholder="title" type="text" id="title"
                                            name="title" value="<%= post.title %>" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-email">Content</label>
                                        <textarea class="form-control" name="content" id="content" rows="8"
                                            disabled><%= post.content %></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-6">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-email">Image</label>
                                        <div class="custom-file">
                                            <img class="mt-2 rounded" src="/<%= post.img %>" alt="post image"
                                                width="200">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-password">Tag</label>
                                        <input class="form-control" placeholder="tag" type="text" id ="tag" name ="tag"
                                            value="<%= post.tag %>" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                  <div class="form-group">
                                    <label class="form-control-label" for="input-password">Published</label><br>
                                    <label class="custom-toggle">
                                        <input id="isPublished" name="isPublished" type="checkbox" disabled <%= post.isPublished ? 'checked' : '' %>>
                                        <span class="custom-toggle-slider rounded-circle" data-label-off="No" data-label-on="Yes"></span>
                                    </label>
                                  </div>
                                </div>
                            </div>

                        </div> 
                    </form> 
                </div> 
            </div> 
        </div> 
    </div> 
</div> 