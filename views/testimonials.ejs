<div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Testimonials</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="#">Testimonials</a></li>
                <li class="breadcrumb-item active" aria-current="page">Testimonials</li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <a href="/add-testimonial" class="btn btn-sm btn-neutral"><i class="fas fa-plus"></i> New</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <% if(message.success){ %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span class="alert-text"><strong>Success!</strong> <%= message.success %></span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>
            <% if(message.error){ %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <span class="alert-text"><strong>Error!</strong> <%= message.error %></span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% } %>
            <h3 class="mb-0">Light table</h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <% if(testimonials!= ''){ %>
            <table class="table align-items-center table-flush table-datatable">
              <thead class="thead-light">
                <tr>
                  <th scope="col" class="sort" data-sort="name">Name</th>
                  <th scope="col" class="sort" data-sort="image">Company name</th>
                  <th scope="col" class="sort" data-sort="tag">Image</th>
                  <th scope="col" class="sort" data-sort="published">Company Image</th>
                  <th scope="col" class="sort" data-sort="published">Description</th>
                  <th scope="col" class="sort" data-sort="published">Published</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody class="list">
                <% testimonials.forEach((row, index) => { %>
                <tr>
                  <th scope="row">
                    <div class="media align-items-center">
                      <div class="media-body">
                        <span class="name mb-0 text-sm"><%= row.name %></span>
                      </div>
                    </div>
                  </th>
                  <th scope="row">
                    <div class="media align-items-center">
                      <div class="media-body">
                        <span class="name mb-0 text-sm"><%= row.companyName %></span>
                      </div>
                    </div>
                  </th>
                  <td>
                    <div class="media align-items-center">
                      <img alt="Image placeholder" src="<%= row.userImg %>" width="100">
                    </div>
                  </td>
                  <td>
                    <div class="media align-items-center">
                      <img alt="Image placeholder" src="<%= row.companyImg %>" width="100">
                  </div>
                  </td>
                  <td class="budget">
                    <%= row.description.substring(0, 50) %>...
                  </td>
                  <td class="budget">
                    <% if(row.isPublished == true) { %>
                      <a href="#" class="badge badge-pill badge-lg badge-success">Yes</a>
                    <% } else { %>
                      <a href="#" class="badge badge-pill badge-lg badge-secondary">No</a>
                    <% } %>
                  </td>
                  <td class="text-right">
                    <div class="dropdown">
                      <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        <a class="dropdown-item" href="/edit-testimonial/<%= row._id %>"><span class="fa fa-pen mr-2"></span>Edit</a>
                        <a class="dropdown-item" href="/view-testimonial/<%= row._id %>"><span class="fa fa-eye mr-2"></span>View</a>
                        <a type="button" class="dropdown-item text-dark" data-toggle="modal" data-target="#exampleModal<%= index %>"><span class="fa fa-trash mr-2"></span>Delete</a>
                        <!-- <form action="/delete-testimonial/<%= row._id %>" method="post">
                          <input class="dropdown-item" type="submit" value="Delete">
                        </form> -->
                      </div>
                    </div>
                  </td>
                </tr>
                <!-- Modal -->
              <div class="modal fade" id="exampleModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete <span class="text-primary font-weight-bold"><%= row.name %></span>?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <form action="/delete-testimonial/<%= row._id %>" method="post">
                        <input class="btn btn-danger" type="submit" value="Delete">
                      </form>
                    </div>
                  </div>
                </div>
              </div>
                <% }) %>
              </tbody>
            </table>
            <% } else { %>
                <h1 class="text-center text-primary">No Testimonials Found</h1>
            <% } %>
          </div>
          <!-- Card footer -->
          <div class="card-footer py-4">
            <!-- table footer -->
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
  </div>